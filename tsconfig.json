{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "noEmitOnError": false
  },
  "include": [
    "./",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.ts",
    "src/plugins/**"
  ],
}
